{% extends 'base.html.twig' %}

{% block title %}{{ 'portfolio.my_portfolios'|trans }}{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <h1 class="h3">{{ 'portfolio.my_portfolios'|trans }}</h1>
    </div>
    <div class="col text-end">
        <a href="{{ path('app_portfolio_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>{{ 'portfolio.new_portfolio'|trans }}
        </a>
    </div>
</div>

<div class="row">
    {% for portfolio in portfolios %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-{% if portfolio.type == 'cash' %}money-bill{% else %}credit-card{% endif %} me-2"></i>
                        {{ portfolio.name }}
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ ('portfolio.' ~ portfolio.type)|trans }}</h6>
                    
                    <div class="mt-3">
                        <p class="h4 {% if portfolio.balance < 0 %}text-danger{% else %}text-success{% endif %} mb-0">
                            {{ portfolio.balance|number_format(2, '.', ',') }} PLN
                        </p>
                    </div>
                    
                    <div class="mt-4">
                        <a href="{{ path('app_portfolio_show', {'id': portfolio.id}) }}" class="btn btn-sm btn-outline-primary me-2">
                            <i class="fas fa-eye me-1"></i>{{ 'portfolio.details'|trans }}
                        </a>
                        <a href="{{ path('app_transaction_new') }}" class="btn btn-sm btn-success">
                            <i class="fas fa-plus me-1"></i>{{ 'portfolio.add_transaction'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>{{ 'portfolio.no_portfolios_yet'|trans }}
            </div>
        </div>
    {% endfor %}
</div>

{% if portfolios|length > 0 %}
    <div class="row mt-4">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'portfolio.total_balance'|trans }}</h5>
                    {% set total = 0 %}
                    {% for portfolio in portfolios %}
                        {% set total = total + portfolio.balance %}
                    {% endfor %}
                    <p class="h3 {% if total < 0 %}text-danger{% else %}text-success{% endif %} mb-0">
                        {{ total|number_format(2, '.', ',') }} PLN
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %} 