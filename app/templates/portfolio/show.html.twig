{% extends 'base.html.twig' %}

{% block title %}{{ portfolio.name }}{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <h1 class="h3">
            <i class="fas fa-{% if portfolio.type == 'cash' %}money-bill{% else %}credit-card{% endif %} me-2"></i>
            {{ portfolio.name }}
        </h1>
        <p class="text-muted mb-0">{{ ('portfolio.' ~ portfolio.type)|trans }}</p>
    </div>
    <div class="col text-end">
        <a href="{{ path('app_transaction_new') }}" class="btn btn-success me-2">
            <i class="fas fa-plus me-1"></i>{{ 'portfolio.add_transaction'|trans }}
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ 'portfolio.balance'|trans }}</h5>
                <p class="h2 {% if portfolio.balance < 0 %}text-danger{% else %}text-success{% endif %} mb-0">
                    {{ portfolio.balance|number_format(2, '.', ',') }} PLN
                </p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">{{ 'transaction.title'|trans }}</h5>
        <div class="btn-group">
            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fas fa-filter me-1"></i>{{ 'transaction.filter_by_category'|trans }}
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="{{ path('app_portfolio_show', {'id': portfolio.id}) }}">{{ 'transaction.all_categories'|trans }}</a></li>
                <li><hr class="dropdown-divider"></li>
                {% set categories = [] %}
                {% for transaction in portfolio.transactions %}
                    {% if transaction.category.name not in categories %}
                        {% set categories = categories|merge([transaction.category.name]) %}
                    {% endif %}
                {% endfor %}
                {% for category in categories|sort %}
                    <li><a class="dropdown-item" href="{{ path('app_portfolio_show', {'id': portfolio.id, 'category': category}) }}">{{ category }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>{{ 'transaction.date'|trans }}</th>
                    <th>{{ 'transaction.title'|trans }}</th>
                    <th>{{ 'transaction.category'|trans }}</th>
                    <th>{{ 'transaction.amount'|trans }}</th>
                    <th>{{ 'common.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for transaction in portfolio.transactions|sort((a, b) => b.date <=> a.date) %}
                    {% if app.request.query.get('category') is null or transaction.category.name == app.request.query.get('category') %}
                        <tr>
                            <td>{{ transaction.date|date('Y-m-d H:i') }}</td>
                            <td>{{ transaction.title }}</td>
                            <td>
                                <span class="badge" style="background-color: {{ transaction.category.color }}">
                                    {{ transaction.category.name }}
                                </span>
                            </td>
                            <td class="{% if transaction.amount < 0 %}text-danger{% else %}text-success{% endif %}">
                                {{ transaction.amount|number_format(2, '.', ',') }} PLN
                            </td>
                            <td>
                                <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    {% endif %}
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-4">{{ 'transaction.no_transactions_found'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<form method="post" action="{{ path('app_portfolio_delete', {'id': portfolio.id}) }}" onsubmit="return confirm('{{ 'portfolio.are_you_sure_delete_portfolio'|trans }}');" class="mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ portfolio.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash me-1"></i>{{ 'portfolio.delete_portfolio'|trans }}
    </button>
</form>
{% endblock %} 