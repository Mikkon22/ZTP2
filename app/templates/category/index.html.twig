{% extends 'base.html.twig' %}

{% block title %}{{ 'category.categories'|trans }}{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <h1 class="h3">{{ 'category.categories'|trans }}</h1>
    </div>
    <div class="col text-end">
        <div class="btn-group">
            <a href="{{ path('app_category_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>{{ 'category.new_category'|trans }}
            </a>
            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fas fa-filter me-1"></i>{{ 'category.filter_by_type'|trans }}
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="{{ path('app_category_index') }}">{{ 'category.all_types'|trans }}</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="{{ path('app_category_index', {'type': 'income'}) }}">{{ 'category.income'|trans }}</a></li>
                <li><a class="dropdown-item" href="{{ path('app_category_index', {'type': 'expense'}) }}">{{ 'category.expense'|trans }}</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    {% for category in categories %}
        {% if app.request.query.get('type') is null or category.type == app.request.query.get('type') %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <span class="badge me-2" style="background-color: {{ category.color|default('#6c757d') }}">
                                <i class="fas fa-tag"></i>
                            </span>
                            {{ category.name }}
                            <span class="badge bg-{{ category.type == 'income' ? 'success' : 'danger' }} ms-2">
                                {{ category.type|capitalize }}
                            </span>
                        </h5>
                        
                        {% if category.description %}
                            <p class="card-text text-muted">{{ category.description }}</p>
                        {% endif %}
                        
                        <div class="mt-3">
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-outline-primary me-2">
                                <i class="fas fa-edit me-1"></i>{{ 'category.edit'|trans }}
                            </a>
                            <form action="{{ path('app_category_delete', {'id': category.id}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('{{ 'category.are_you_sure_delete_category'|trans }}')">
                                    <i class="fas fa-trash me-1"></i>{{ 'category.delete'|trans }}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="col">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>{{ 'category.no_categories_found'|trans }}
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %} 