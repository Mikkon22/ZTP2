{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.user_management'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">{{ 'admin.user_management'|trans }}</h1>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title h5 mb-0">{{ 'admin.registered_users'|trans }}</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>{{ 'auth.email'|trans }}</th>
                                <th>{{ 'auth.first_name'|trans }}</th>
                                <th>{{ 'auth.last_name'|trans }}</th>
                                <th>{{ 'admin.roles'|trans }}</th>
                                <th>{{ 'admin.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.firstName }}</td>
                                    <td>{{ user.lastName }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            <span class="badge bg-secondary">{{ role }}</span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('app_admin_edit_user', {'id': user.id}) }}" 
                                               class="btn btn-sm btn-info me-2">
                                                <i class="fas fa-edit"></i> {{ 'admin.edit'|trans }}
                                            </a>
                                            <a href="{{ path('app_admin_change_user_password', {'id': user.id}) }}" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-key"></i> {{ 'admin.change_password'|trans }}
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 