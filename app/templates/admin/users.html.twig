{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">User Management</h1>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title h5 mb-0">Registered Users</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Roles</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.firstName }}</td>
                                    <td>{{ user.lastName }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            <span class="badge bg-secondary">{{ role }}</span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('app_admin_edit_user', {'id': user.id}) }}" 
                                               class="btn btn-sm btn-info me-2">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a href="{{ path('app_admin_change_user_password', {'id': user.id}) }}" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-key"></i> Change Password
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 