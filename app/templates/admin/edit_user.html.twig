{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.edit_user'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">{{ 'admin.edit_user'|trans }}: {{ user.email }}</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.email, 'auth.email') }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.firstName, 'auth.first_name') }}
                                {{ form_widget(form.firstName) }}
                                {{ form_errors(form.firstName) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.lastName, 'auth.last_name') }}
                                {{ form_widget(form.lastName) }}
                                {{ form_errors(form.lastName) }}
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_admin_users') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> {{ 'admin.back_to_users'|trans }}
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> {{ 'admin.save_changes'|trans }}
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 