{% extends 'base.html.twig' %}

{% block title %}{{ 'task.new_task'|trans }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">{{ 'task.new_task'|trans }}</h1>
            
            <div class="alert alert-info">
                {{ 'task.note'|trans }}
            </div>

            <dl class="row">
                <dt class="col-sm-3">{{ 'task.title'|trans }}</dt>
                <dd class="col-sm-9">{{ task.title }}</dd>

                <dt class="col-sm-3">{{ 'transaction.description'|trans }}</dt>
                <dd class="col-sm-9">{{ task.description }}</dd>

                <dt class="col-sm-3">{{ 'task.created_at'|trans }}</dt>
                <dd class="col-sm-9">{{ task.createdAt|date('Y-m-d H:i:s') }}</dd>

                <dt class="col-sm-3">{{ 'task.status'|trans }}</dt>
                <dd class="col-sm-9">
                    <span class="badge {{ task.isDone ? 'bg-success' : 'bg-secondary' }}">
                        {{ task.isDone ? 'task.done'|trans : 'task.pending'|trans }}
                    </span>
                </dd>
            </dl>

            <a href="{{ path('task_index') }}" class="btn btn-secondary">{{ 'nav.back_to_list'|trans }}</a>
        </div>
    </div>
{% endblock %} 