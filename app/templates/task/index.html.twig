{% extends 'base.html.twig' %}

{% block title %}{{ 'common.task_list'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'common.task_list'|trans }}</h1>

    <a href="{{ path('task_new') }}" class="btn btn-primary mb-3">{{ 'common.create_new_task'|trans }}</a>

    <div class="row">
        {% for task in tasks %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ task.title }}</h5>
                        <p class="card-text">{{ task.description }}</p>
                        <p class="text-muted">Created: {{ task.createdAt|date('Y-m-d H:i:s') }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <form action="{{ path('task_toggle', {'id': task.id}) }}" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-sm {{ task.isDone ? 'btn-success' : 'btn-secondary' }}">
                                    {{ task.isDone ? 'task.done'|trans : 'common.mark_as_done'|trans }}
                                </button>
                            </form>
                            <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-sm btn-info">{{ 'common.view'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>{{ 'common.no_data'|trans }}</p>
            </div>
        {% endfor %}
    </div>
{% endblock %} 