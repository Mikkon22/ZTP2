{% extends 'base.html.twig' %}

{% block title %}Task: {{ task.title }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">{{ task.title }}</h1>
            <p class="card-text">{{ task.description }}</p>
            <p class="text-muted">Created: {{ task.createdAt|date('Y-m-d H:i:s') }}</p>
            <p>{{ 'common.status'|trans }}: <span class="badge {{ task.isDone ? 'bg-success' : 'bg-secondary' }}">
                {{ task.isDone ? 'task.done'|trans : 'task.pending'|trans }}
            </span></p>
            
            <div class="mt-3">
                <a href="{{ path('task_index') }}" class="btn btn-secondary">{{ 'common.back_to_list'|trans }}</a>
                <form action="{{ path('task_toggle', {'id': task.id}) }}" method="POST" style="display: inline;">
                    <button type="submit" class="btn {{ task.isDone ? 'btn-warning' : 'btn-success' }}">
                        {{ task.isDone ? 'common.mark_as_pending'|trans : 'common.mark_as_done'|trans }}
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 