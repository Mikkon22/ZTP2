{% extends 'base.html.twig' %}

{% block title %}{{ 'tag.tags'|trans }}{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <h1 class="h3">{{ 'tag.tags'|trans }}</h1>
    </div>
    <div class="col text-end">
        <a href="{{ path('app_tag_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>{{ 'tag.new_tag'|trans }}
        </a>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>{{ 'tag.tag_name'|trans }}</th>
                    <th>{{ 'tag.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <td>{{ tag.name }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('app_tag_delete', {'id': tag.id}) }}" 
                                      onsubmit="return confirm('{{ 'tag.are_you_sure_delete'|trans }}');" 
                                      style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                                    <button class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center py-4">{{ 'tag.no_tags_found'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %} 