{% extends 'base.html.twig' %}

{% block title %}{{ 'tag.edit_tag'|trans }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">{{ 'tag.edit_tag'|trans }}</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.name, 'tag.tag_name') }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_tag_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> {{ 'tag.back_to_tags'|trans }}
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> {{ 'tag.save_changes'|trans }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 