{% extends 'base.html.twig' %}

{% block title %}{{ 'transaction.transaction_details'|trans }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">{{ 'transaction.transaction_details'|trans }}</h1>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">{{ 'transaction.title'|trans }}</dt>
                        <dd class="col-sm-9">{{ transaction.title }}</dd>

                        <dt class="col-sm-3">{{ 'transaction.amount'|trans }}</dt>
                        <dd class="col-sm-9 {% if transaction.amount < 0 %}text-danger{% else %}text-success{% endif %}">
                            {{ transaction.amount|number_format(2, '.', ',') }} PLN
                        </dd>

                        <dt class="col-sm-3">{{ 'transaction.date'|trans }}</dt>
                        <dd class="col-sm-9">{{ transaction.date|date('Y-m-d H:i') }}</dd>

                        <dt class="col-sm-3">{{ 'transaction.portfolio'|trans }}</dt>
                        <dd class="col-sm-9">{{ transaction.portfolio.name }}</dd>

                        <dt class="col-sm-3">{{ 'transaction.category'|trans }}</dt>
                        <dd class="col-sm-9">
                            <span class="badge" style="background-color: {{ transaction.category.color }}">
                                {{ transaction.category.name }}
                            </span>
                        </dd>

                        <dt class="col-sm-3">{{ 'transaction.description'|trans }}</dt>
                        <dd class="col-sm-9">{{ transaction.description ? transaction.description : '-' }}</dd>

                        <dt class="col-sm-3">{{ 'transaction.tags'|trans }}</dt>
                        <dd class="col-sm-9">
                            {% for tag in transaction.tags %}
                                <span class="badge bg-secondary me-1">{{ tag.name }}</span>
                            {% else %}
                                <span class="text-muted">{{ 'common.no_tags'|trans }}</span>
                            {% endfor %}
                        </dd>
                    </dl>
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> {{ 'nav.back_to_list'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 