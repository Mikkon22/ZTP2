{% extends 'base.html.twig' %}

{% block title %}{{ 'app.title'|trans }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">{{ 'app.hello_world'|trans }}</h1>
            <p class="card-text">{{ 'app.welcome'|trans }}</p>
            
            {# Example of using variables #}
            {% if name is defined %}
                <p>{{ 'app.hello_name'|trans({'name': name}) }}</p>
            {% endif %}

            {# Example of a list #}
            <h3>{{ 'app.example_list'|trans }}</h3>
            <ul class="list-group">
                {% for i in 1..3 %}
                    <li class="list-group-item">{{ 'app.item'|trans }} {{ i }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %} 