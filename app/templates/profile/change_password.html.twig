{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.change_password_title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">{{ 'auth.change_password_title'|trans }}</h1>
                    </div>
                    <div class="card-body">
                        {% for flash_error in app.flashes('error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {% for flash_success in app.flashes('success') %}
                            <div class="alert alert-success" role="alert">{{ flash_success }}</div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.currentPassword, 'auth.current_password') }}
                                {{ form_widget(form.currentPassword) }}
                                {{ form_errors(form.currentPassword) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.newPassword.first, 'auth.new_password') }}
                                {{ form_widget(form.newPassword.first) }}
                                {{ form_errors(form.newPassword.first) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.newPassword.second, 'auth.confirm_password') }}
                                {{ form_widget(form.newPassword.second) }}
                                {{ form_errors(form.newPassword.second) }}
                            </div>

                            <button type="submit" class="btn btn-primary">{{ 'auth.change_password'|trans }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 